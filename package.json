  },
  "homepage": "https://github.com/zsz12251665/koa-template#readme",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "bunyan": "^1.8.15",
    "dotenv": "^10.0.0",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.3",
    "koa-body": "^4.2.0",
